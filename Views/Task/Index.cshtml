@model List<TodoList.Models.Task> 

@{
    ViewBag.Title = "Index";
}

<section class="home">
    <h2>TODO:</h2>
    @foreach (var task in Model)
    {
<article>
    <a href=@Url.Action("Edit", "Task", new { id = task.Id })><i class="fa fa-edit"></i></a>
    <a href=@Url.Action("Delete", "Task", new { id = task.Id })><i class="fa fa-window-close"></i></a>
    <h3>@task.Title</h3>
    <p>@task.Comments</p>
</article>
    }
    @Html.ActionLink("Create New", "Create", "Task", null, new {@id="create-button"} )
</section>